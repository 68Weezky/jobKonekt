<div class="min-h-screen bg-beige">
    <!-- Drawer -->
    <div class="drawer">
        <input id="drawer-toggle" type="checkbox" class="drawer-toggle" />
        <!-- Drawer Content -->
        <div class="drawer-content">
            <%- include('header') %>
            <!-- Page Content -->
            <div class="container mx-auto p-4">
                <h1 class="text-2xl font-bold mb-4">Notifications</h1>
                <% if (notifications && notifications.length > 0) { %>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                        <% notifications.forEach(function(n) { %>
                            <div class="card bg-base-100 shadow-xl">
                                <div class="card-body">
                                    <div class="font-semibold mb-1">Service Request from <span class="text-blue-700"><%= n.username %></span></div>
                                    <div class="text-sm text-gray-600 mb-1">Email: <%= n.email %></div>
                                    <div class="text-sm text-gray-600 mb-1">Residential Area: <span class="font-semibold"><%= n.residential_area %></span></div>
                                    <div class="text-sm text-gray-600 mb-1">Service: <span class="font-semibold"><%= n.professional_required %></span></div>
                                    <div class="text-xs text-gray-500 mb-1">Description: <%= n.job_description %></div>
                                    <div class="text-xs text-gray-400">When: <%= new Date(n.service_time).toLocaleString() %></div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="text-gray-400 text-center mt-8">No notifications yet.</div>
                <% } %>
            </div>
            <%- include('footer') %>
        </div>
        <!-- Drawer Side -->
        <%- include('drawer') %>
    </div>
</div> 